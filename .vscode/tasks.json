{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run minecraft",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compile minecraft",
                "Run minecraft"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile minecraft",
            "type": "shell",
            "command": "g++-11",
            "args": [
                "${workspaceFolder}/Code/Main.cpp",
                "-I${workspaceFolder}/Code",
                "-I${workspaceFolder}/Code/Headers",
                "-I${workspaceFolder}/Code/Static",
                "-I${workspaceFolder}/Code/Graphics",

                "-I/usr/local/include/OGRE",
                "-I/usr/local/include/OGRE/Bites",
                "-I/usr/local/include/OGRE/RTShaderSystem",
                "-I/usr/local/include/OGRE/Overlay",

                "/usr/local/lib/libOgreBites.so",
                "/usr/local/lib/libOgreMain.so",
                "/usr/local/lib/libOgreRTShaderSystem.so",
                
                "-o",
                "${workspaceFolder}/minecrafttestcompiled"
            ]
        },
        {
            "label": "Run minecraft",
            "type": "shell",
            "command": "${workspaceFolder}/minecrafttestcompiled"
        }
    ]
}